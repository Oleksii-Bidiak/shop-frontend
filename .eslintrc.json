{
  "extends": ["next/core-web-vitals", "plugin:import/recommended", "plugin:import/typescript", "prettier"],
  "plugins": ["import", "react"],
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./",
        "alwaysTryTypes": true
      }
    }
  },
  "rules": {
    "@next/next/no-img-element": "off",
    "import/no-relative-parent-imports": "error",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "object",
          "type"
        ],
        "pathGroups": [
          {
            "pattern": "@app/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@pages/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@widgets/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@features/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@entities/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@shared/**",
            "group": "internal",
            "position": "before"
          },
          {
            "pattern": "@/**",
            "group": "internal"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"],
        "newlines-between": "always",
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ],
    "react/forbid-dom-props": ["error", { "forbid": ["style"] }],
    "no-restricted-syntax": [
      "error",
      {
        "selector": "Literal[value=/^#(?:[0-9a-fA-F]{3}){1,2}$/]",
        "message": "Використовуйте дизайн-токени замість хардкодних hex-кольорів."
      },
      {
        "selector": "Literal[value=/^(rgb|hsl)a?\\(/]",
        "message": "Використовуйте дизайн-токени замість хардкодних кольорів."
      },
      {
        "selector": "Literal[value=/\\b(?:red|blue|green|black|white|gray|grey|yellow|orange|purple|pink|brown|lime|teal|cyan)\\b/i]",
        "message": "Використовуйте кольорові токени Tailwind або CSS variables замість названих кольорів."
      },
      {
        "selector": "TemplateElement[value.raw=/\\b(?:red|blue|green|black|white|gray|grey|yellow|orange|purple|pink|brown|lime|teal|cyan)\\b/i]",
        "message": "Використовуйте кольорові токени Tailwind або CSS variables замість названих кольорів."
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/shared/design/tokens.ts"],
      "rules": {
        "no-restricted-syntax": "off"
      }
    }
  ]
}
